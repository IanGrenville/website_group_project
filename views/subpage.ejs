    <link rel="stylesheet" href="/css/subpage.css">
    <link rel="stylesheet" href="/css/themes.css">
    <title>McGill School of Computer Science</title>
</head>

<body class=<%=theme%>>

    <!-- Saves the variable 'title' so it can be accessed by the script subpage.js -->
    <span id="title" style="display:none"><%=title%></span>

    <!-- Top fixed menu -->
    <%- include('partials/navbar', {logged, username, navbar}) %>
   
    <div id="content">
        <!--Get the content from the database and render it here -->
        <% if(content.data) { %>
            <%- include(content.html); %>
            <% } else { %>
            <%-content.html %>

            <% } if(!content.data && logged) { %>
            <a href="<%-'/' + content.path +'/edit'%>">Edit Source</a>
            <% } %>
        </div>
        <%- include('partials/footer'); %>

</body>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"
